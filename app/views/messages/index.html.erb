<div class="panel panel-default">
  <div class="panel-heading">
   メッセージ一覧    
  </div>

  <div class="panel-body"> 
  　　 <div class="list-group">
    <% @messages.each do |message| %>
     <div class="list-group-item"><span class="label label-info"><%= message.name %></span>
     <%= message.body %>
      <%= link_to "edit" , edit_message_path(message) ,:class=>"btn btn-default btn-xs" %>
      <%= link_to "destroy" , message , method: :delete,:class=>"btn btn-danger btn-xs", data: { confirm: '削除してもよろしいですか？' } %>
 </div>
       <% end %>    
      
    </div>


<% #部分テンプレートを読み込んでいる %>
<%= render 'form' %>
</div>