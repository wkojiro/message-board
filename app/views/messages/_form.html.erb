<%= form_for @message, :html => {:class=>"form-horizontal",:role=> "form"} do |f| %>

  <% if @message.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @message.errors.full_messages.each do |full_message| %>
          <li>
            <%= full_message %>
          </li>
        <% end %> 
      </ul>
    </div>
  <% end %>
<div class="form-group">
   <label class="col-sm-2 control-label">名前</label>
  <div class="col-sm-10">
  <%= f.text_area :name ,:class=>"form-control" ,:placeholder=>"名前" ,:rows=>"1"  %>
   </div>
</div>

<div class="form-group">
   <label class="col-sm-2 control-label">内容</label>
  <div class="col-sm-10">
  <%= f.text_area :body ,:class=>"form-control",:placeholder=>"内容" ,:rows=>"3" %>
   </div>
</div>
<div class="form-group">
 <div class="col-sm-2">
   </div>
   <div class="col-sm-10">
  <%= f.submit class: "btn btn-default btn-primary" %>
   </div>
   </div>
<% end %>
